#:kivy 2.1.0
#:import sys sys

<DataMenuScreen>
    id: menu_screen
    BoxLayout:
        orientation: "vertical"
        MonitoringSessionListView:
            id: monitoring_session_list
            viewclass: "MonitoringSessionRow"
            RecycleBoxLayout:
                padding: (20, 20)
                spacing: 40
                orientation: "vertical"
                default_size: None, dp(105)
                default_size_hint: 1, None
                size_hint_y: None 
                height: self.minimum_height 

        BoxLayout:
            size_hint_y: 0.1
            Button:
                text: "Exit"
                on_press: app.stop() 
            Button:
                text: "View Queue"
                on_press: root.manager.current = "queue"
            Button:
                text: "Change Trap"
                on_press: root.choose_root_directory() 
            Button:
                text: "Export Events"
                on_press: app.export_events() 
            Button:
                text: "Export Detections"
                on_press: app.export_detections() 
            Button:
                text: "Settings"
                on_press: app.open_settings()

