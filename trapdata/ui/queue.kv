#:kivy 2.1.0


<QueueScreen>
    id: queue_screen 
    BoxLayout:
        orientation: "vertical"
        padding: 0
        spacing: 0

        QueueStatusTable:
            padding: 0
            spacing: 0
            id: queue_status

        BoxLayout:
            id: controls 
            orientation: "horizontal"
            size_hint_y: 0.1
            Button:
                text: "Back"
                on_press: root.exit()
            Button:
                text: "Start"
                on_press: app.start_queue()
            Button:
                text: " " # No stop method available
                on_press: app.stop_queue()
            Button:
                text: "Settings"
                on_press: app.open_settings()
