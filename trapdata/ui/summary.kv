#:kivy 2.1.0


<SpeciesSummaryScreen>
    id: summary_screen
    BoxLayout:
        orientation: "vertical"
        SpeciesListLayout:
            id: species_list
            viewclass: "SpeciesRow"
            RecycleBoxLayout:
                padding: (50, 20)
                spacing: 40
                orientation: "vertical"
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None 
                height: self.minimum_height 

        BoxLayout:
            id: controls 
            orientation: "horizontal"
            size_hint_y: 0.1
            Button:
                text: "Back"
                on_press: root.exit()
            Button:
                text: "Refresh"
                on_press: root.refresh()
            # Button:
            #     text: "Species Grid"
            #     on_press: root.manager.current = "species_grid"
            Button:
                text: "Export"
                on_press: root.export()
            Button:
                text: "Settings"
                on_press: app.open_settings()
